<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Thanks â€” finalizing</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
</head>
<body>
  <h1>Thanks for your purchase</h1>
  <p>We are finalizing your order. This may take up to 20 seconds.</p>
  <p id="status">Working...</p>

  <script>
    async function finalize() {
      const urlParams = new URLSearchParams(window.location.search);
      const session_id = urlParams.get('session_id');
      const orderId = urlParams.get('orderId');
      if (!session_id || !orderId) {
        document.getElementById('status').innerText = 'Missing session info.';
        return;
      }
      try {
        const resp = await fetch(`/finalize-order?session_id=${encodeURIComponent(session_id)}&orderId=${encodeURIComponent(orderId)}`);
        const data = await resp.json();
        if (data && data.downloadUrl) {
          document.getElementById('status').innerHTML = `Your download is ready: <a href="${data.downloadUrl}">Download file</a>`;
        } else {
          document.getElementById('status').innerText = 'Could not finalize order: ' + (data.error || 'unknown error');
        }
      } catch (e) {
        document.getElementById('status').innerText = 'Network error.';
      }
    }
    finalize();
  </script>
</body>
</html>
